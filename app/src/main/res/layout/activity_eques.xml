<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- セレクトボックス1 -->
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinner2" />

    <!-- セレクトボックス2 -->
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinner1"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== 1段目（上段） ========== -->

    <!-- 1つ目のセット -->
    <include
        android:id="@+id/numberSet1"
        layout="@layout/view_number_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/numberSet2" />

    <!-- 2つ目のセット -->
    <include
        android:id="@+id/numberSet2"
        layout="@layout/view_number_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintStart_toEndOf="@id/numberSet1"
        app:layout_constraintEnd_toStartOf="@id/numberSet3" />

    <!-- 3つ目のセット -->
    <include
        android:id="@+id/numberSet3"
        layout="@layout/view_number_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintStart_toEndOf="@id/numberSet2"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== 2段目（下段） ========== -->

    <!-- 4つ目のセット -->
    <include
        android:id="@+id/numberSet4"
        layout="@layout/view_number_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/numberSet1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/numberSet5" />

    <!-- 5つ目のセット -->
    <include
        android:id="@+id/numberSet5"
        layout="@layout/view_number_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/numberSet2"
        app:layout_constraintStart_toEndOf="@id/numberSet4"
        app:layout_constraintEnd_toStartOf="@id/numberSet6" />

    <!-- 6つ目のセット -->
    <include
        android:id="@+id/numberSet6"
        layout="@layout/view_number_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/numberSet3"
        app:layout_constraintStart_toEndOf="@id/numberSet5"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
