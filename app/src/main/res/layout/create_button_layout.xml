<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/home_padding"
    android:background="@drawable/generic_button_background"
    android:backgroundTint="@color/skyBlue"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/createImageButton"
        android:layout_width="@dimen/home_button_layout"
        android:layout_height="@dimen/home_button_layout"
        android:src="@drawable/ic_qr_code"
        android:contentDescription="@string/cryptoCreation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cryptoCreation"
        android:textColor="@color/black"
        android:textSize="@dimen/home_text_size" />
</LinearLayout>

