<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Home画面専用の上ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="W,320:363"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/home_guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="@dimen/home_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/title_gradient"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="3"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:layout_marginTop="@dimen/home_title_margin_top"
        app:layout_constraintTop_toBottomOf="@id/titleImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_eques"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:padding="@dimen/button_padding"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginStart="@dimen/home_button_margin_horizontal"
        android:layout_marginEnd="@dimen/home_button_margin_horizontal"
        android:layout_marginTop="@dimen/home_button_margin_top_first" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/secondButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_nabla"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:padding="@dimen/button_padding"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/equesButton"
        android:layout_marginStart="@dimen/home_button_margin_horizontal"
        android:layout_marginEnd="@dimen/home_button_margin_horizontal"
        android:layout_marginTop="@dimen/home_button_margin_top_between" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thirdButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_multi"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:padding="@dimen/button_padding"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondButton"
        android:layout_marginStart="@dimen/home_button_margin_horizontal"
        android:layout_marginEnd="@dimen/home_button_margin_horizontal"
        android:layout_marginTop="@dimen/home_button_margin_top_between" />

</androidx.constraintlayout.widget.ConstraintLayout>
