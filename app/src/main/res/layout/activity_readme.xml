<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <!-- 全画面共通の左右余白ガイドライン（guideline_start/guideline_end） -->
    <include layout="@layout/guideline_common" />

    <!-- スライド -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backHomeLayout"
        app:layout_constraintBottom_toTopOf="@id/dotsIndicator"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />


    <LinearLayout
        android:id="@+id/backHomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        tools:ignore="MissingConstraints">

        <!-- ホームに戻るボタン -->
        <include layout="@layout/back_home_button_layout" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 暗号を作成するボタン -->
        <include
            android:id="@+id/createButtonContainer"
            layout="@layout/create_button_layout" />
    </LinearLayout>

    <!-- page_item で記載。ここから -->
    <!-- タイトル -->
    <!-- 本文 -->
    <!-- 画像 -->
    <!-- page_item で記載。ここまで -->

    <!--  スライドのためのドットインジケータ -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/actionBarSize"
        app:dotsColor="@color/white"
        app:dotsCornerRadius="@dimen/dots_corner_radius"
        app:dotsSize="@dimen/dots_size"
        app:dotsSpacing="@dimen/dots_spacing"
        app:dotsWidthFactor="@dimen/dots_factor"
        app:selectedDotColor="@color/blue"
        app:progressMode="false"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

</androidx.constraintlayout.widget.ConstraintLayout>
