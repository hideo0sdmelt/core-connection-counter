<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multiplier_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiplierButton1"
        android:layout_width="0dp"
        android:layout_height="@dimen/multiplier_button_height"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/multiplier_button_margin_end"
        android:text="ブースト1"
        android:textSize="@dimen/multiplier_button_text_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/multiplier_button_corner_radius"
        app:backgroundTint="@color/button_boost1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiplierButton2"
        android:layout_width="0dp"
        android:layout_height="@dimen/multiplier_button_height"
        android:layout_weight="1"
        android:text="ブースト2"
        android:textSize="@dimen/multiplier_button_text_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/multiplier_button_corner_radius"
        app:backgroundTint="@color/button_boost2" />

</LinearLayout>
