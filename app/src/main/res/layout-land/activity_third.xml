<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:ignore="MissingDefaultResource">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- メインコンテンツ（縦スクロール可能） -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/third_scroll_bottom_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="1dp"
            android:spacing="1dp"
            android:weightSum="2">

            <!-- ========== 左側 ========== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- セレクトボックス -->
                <include
                    android:id="@+id/spinnerSet1_left"
                    layout="@layout/view_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spinnerSet2_left" />

                <include
                    android:id="@+id/spinnerSet2_left"
                    layout="@layout/view_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/spinnerSet1_left"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 1段目（上段） -->
                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet1_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerSet1_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/numberSet2_left">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet2_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerSet1_left"
                    app:layout_constraintStart_toEndOf="@id/numberSet1_left"
                    app:layout_constraintEnd_toStartOf="@id/numberSet3_left">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet3_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerSet1_left"
                    app:layout_constraintStart_toEndOf="@id/numberSet2_left"
                    app:layout_constraintEnd_toEndOf="parent">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <!-- 倍率ボタン -->
                <include
                    android:id="@+id/multiplierButtons_left"
                    layout="@layout/view_multiplier_buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:layout_constraintTop_toBottomOf="@id/numberSet1_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 2段目（下段） -->
                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet4_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@id/multiplierButtons_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/numberSet5_left">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet5_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@id/multiplierButtons_left"
                    app:layout_constraintStart_toEndOf="@id/numberSet4_left"
                    app:layout_constraintEnd_toStartOf="@id/numberSet6_left">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet6_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@id/multiplierButtons_left"
                    app:layout_constraintStart_toEndOf="@id/numberSet5_left"
                    app:layout_constraintEnd_toEndOf="parent">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ========== 右側 ========== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- セレクトボックス -->
                <include
                    android:id="@+id/spinnerSet1_right"
                    layout="@layout/view_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spinnerSet2_right" />

                <include
                    android:id="@+id/spinnerSet2_right"
                    layout="@layout/view_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/spinnerSet1_right"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 1段目（上段） -->
                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet1_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerSet1_right"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/numberSet2_right">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet2_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerSet1_right"
                    app:layout_constraintStart_toEndOf="@id/numberSet1_right"
                    app:layout_constraintEnd_toStartOf="@id/numberSet3_right">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet3_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerSet1_right"
                    app:layout_constraintStart_toEndOf="@id/numberSet2_right"
                    app:layout_constraintEnd_toEndOf="parent">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <!-- 倍率ボタン -->
                <include
                    android:id="@+id/multiplierButtons_right"
                    layout="@layout/view_multiplier_buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:layout_constraintTop_toBottomOf="@id/numberSet1_right"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 2段目（下段） -->
                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet4_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@id/multiplierButtons_right"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/numberSet5_right">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet5_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@id/multiplierButtons_right"
                    app:layout_constraintStart_toEndOf="@id/numberSet4_right"
                    app:layout_constraintEnd_toStartOf="@id/numberSet6_right">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    style="@style/ScaledFrame"
                    android:id="@+id/numberSet6_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="@fraction/number_set_width_percent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@id/multiplierButtons_right"
                    app:layout_constraintStart_toEndOf="@id/numberSet5_right"
                    app:layout_constraintEnd_toEndOf="parent">

                    <include
                        layout="@layout/view_number_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ✅ ボタンコンテナ（ホーム＋リセット） -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:spacing="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_home"
            android:textSize="16sp"
            android:padding="16dp"
            app:backgroundTint="@color/button_home"
            app:cornerRadius="8dp"
            app:elevation="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            app:backgroundTint="@color/button_reset"
            app:cornerRadius="8dp"
            app:elevation="4dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
